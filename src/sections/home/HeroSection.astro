---

import Container from "../../components/Container.astro";
import {HomePickupForm} from "./HomePickupForm";
---

<header class="relative  md:h-[80vh] bg-[url('/hero-bg.jpg')] bg-cover bg-center py-7">
    <div class="absolute inset-0 bg-gradient-to-b from-[#1E1E1E] to-primary opacity-50 z-[1]"></div>
    <Container className="h-full">
        <div class="flex flex-col gap-10 md:flex-row md:items-center justify-center md:justify-between h-full relative z-[2]">
            <div class="w-full md:w-[60%]">
                <h2 class="text-2xl font-bold text-white">
                    You <span class="text-primary">Need</span>
                </h2>
                <h2 class="text-2xl font-bold text-white">
                    We <span class="text-primary">Deliver</span>
                </h2>
                <div class="mt-3">
                    <h1 class="text-5xl lg:text-6xl 2xl:text-[62px] font-bold text-white 2xl:w-[70%]">
                        Fast, Reliable, Hassle-Free Delivery
                    </h1>
                    <p class="sm:text-lg text-white mt-2">We Pick Up & Deliver Anything, Anywhere - On Time, Every Time!
                    </p>
                </div>
            </div>
            <div class='rounded-xl bg-white p-4 md:w-[40%]'>
                <HomePickupForm />
            </div>
        </div>
    </Container>
</header>