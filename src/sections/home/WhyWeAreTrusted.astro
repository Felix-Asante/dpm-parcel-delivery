---
import Container from "../../components/Container.astro";
import { WhyWeAreTrustedData } from "../../constants/data";
---

<section class="my-14 2xl:my-20">
    <Container>
        <div class="flex lg:flex-row flex-col  items-center gap-20">
            <div class="lg:w-[60%]">
                <h2 class="text-3xl sm:text-4xl lg:text-[40px] 2xl:text-5xl font-bold mb-10 leading-[1.25]">Why Thousands Trust Our Delivery Services</h2>
            <div class="space-y-7 md:w-[95%] lg:w-full">
                {WhyWeAreTrustedData.map((item) => (
                    <div  class="flex gap-6">
                       <div>
                        <div class="w-11 h-11 bg-primary rounded-full flex items-center justify-center">
                            <item.icon class="w-6 h-6 text-white" />
                        </div>
                       </div>
                        <div>
                            <h3 class="text-lg font-semibold">{item.title}</h3>
                            <p class="text-gray-600">{item.description}</p>
                        </div>
                    </div>
                ))}
            </div>
            </div>
            <div class="lg:w-[40%]">
                <img src="/delivery-man.webp" alt="delivery-man" alt="delivery-man" class="object-cover w-full md:w-[80%] lg:w-full h-full" />
            </div>
        </div>
    </Container>
</section>